<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D0EFDC" /> <!-- Light Red Background -->
        </shape>
    </item>
    <!-- State when hovered (API 21+) -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDFFDD" /> <!-- Light Green Background -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!--            <solid android:color="#FFFFFF" /> &lt;!&ndash; White Background &ndash;&gt;-->
        </shape>
    </item>
</selector>